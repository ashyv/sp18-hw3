<%= form_tag students_path do %>
  <%= label_tag(:full_name, "Full name") %>
  <%= text_field_tag(:full_name) %>

  <%= label_tag(:grad_year, "Graduation Year") %>
  <%= text_field_tag(:grad_year, nil, placeholder: @placeholder_gradyear) %>

  <%= label_tag(:units_completed, "Units Completed") %>
  <%= text_field_tag(:units_completed) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create student") %>
<% end %>